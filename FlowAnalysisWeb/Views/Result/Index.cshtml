@model PagedList.IPagedList<IP.Models.Table>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = null;
}




<head>





    <meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
    <meta name="Author" content="Your Name - website / Design by Ian Smith - N-vent Design Services LLC - www.n-vent.com" />
    <meta name="distribution" content="global" />
    <meta name="rating" content="general" />
    <meta name="Keywords" content="" />
    <meta name="ICBM" content="" /> <!-- see geourl.org -->
    <meta name="DC.title" content="Your Company" />
    <link rel="shortcut icon" href="favicon.ico" /> <!-- see favicon.com -->
    <link href="~/Style/style.css" rel="stylesheet" />
</head>
<body>
    <!-- The ultra77 template is designed and released by Ian Smith - N-vent Design Services LLC - www.n-vent.com. Feel free to use this, but please don't sell it and kindly leave the credits intact. Muchas Gracias! -->
    <div id="wrapper">
        <a name="top"></a>
        <!-- header -->
        <div id="header">
            <div id="pagedescription"><h2>B10300082</h2><h1>唐振嚴</h1><br /><h2>B10317029</h2><h1>周世麒</h1><br /></div>
            <div id="branding"><p><span class="templogo">Machine learning</span><br />IP analysis</p></div>
        </div>

        <!-- top menu -->
        <div id="menu">
            <div id="d" style="margin: 10px">
                @using (@Html.BeginForm("index", "Result/", FormMethod.Get))
                {
                    <b>IPAddr</b>
                    <input name="addrSearch" style="width:80px" />
                    <b>RiskLevel:</b>
                    <select name="Srisk"><option value="0"> </option><option value="1">１</option><option value="2">２</option><option value="3">３</option></select>
                    <b>Date：</b>
                    <input name="SSTime" type="datetime-local" style="width:200px" />
                    <b>  To  </b>
                    <input name="SETime" type="datetime-local" style="width:200px" />
                    <input type="submit" class="css_btn_class" value="Search" />
                }
            </div>
            </div> <!-- end top menu -->
        <!-- bodywrap -->
        <div id="bodytop">&nbsp;</div>
        <div id="bodywrap">

            <div id="contentbody">

                <!-- content here
                ============================================================ -->
                <a name="content"></a>
                <div id="mainContent" style="font-family:Arial">
                    <table class="TB_COLLAPSE">
                        <caption>IPResult   @(DateTime.Now.ToLongTimeString()) </caption>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>IPaddr</th>
                                <th>Time</th>
                                <th>RiskLevel</th>
                            </tr>
                        </thead>
                        @if (Model.Count() == 0)
            {
                            <tr>
                                <td colspan="4">
                                    No records match search criteria
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id_F)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IPAddr_F)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Time_F)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Result_F)
                                    </td>
                                </tr>

                            }
                        }
                    </table>
                </div>
            </div>

        </div> <!-- end bodywrap -->

        <div id="bodybottom">&nbsp;</div>


        <!-- footer -->
        <div id="footer">
            <p>
                <div style="margin:-10px 400px 40px;width:450px">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new
               {
                   page,
                   SSTime = Request.QueryString["SSTime"],
                   SEtime = Request.QueryString["SETime"],
                   Srisk = Request.QueryString["Srisk"],
                   type = Request.QueryString["type"],
                   search = Request.QueryString["search"]
               }),
        new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
                </div>
            </p>
            <ul>
                <li><a href="http://www.oswd.org" title="Another Item">Another Item</a></li>
                <li><a href="http://www.oswd.org" title="Open Source Web Design">Open Source Web Design</a></li>

            </ul>
        </div> <!-- end footer -->
        <!-- side menu  -->
        <div id="sidemenu">
            <div id="smtop">&nbsp;</div>
            <div id="smtitle"><h1>Order</h1></div> <!-- side menu current page title -->
            <ul class="normal">
                <li><a href="@Url.Action("index","Result",new {Page,SSTime = Request.QueryString["SSTime"],SEtime = Request.QueryString["SETime"],
                                                     Srisk = Request.QueryString["Srisk"], addrSearch = Request.QueryString["addrSearch"], type = "Id"})">ID</a></li>
                <li><a href="@Url.Action("index","Result",new {Page,SSTime = Request.QueryString["SSTime"],SEtime = Request.QueryString["SETime"],
                                                     Srisk = Request.QueryString["Srisk"], addrSearch = Request.QueryString["addrSearch"], type = "Time"})">Time</a></li>
                <li><a href="@Url.Action("index","Result",new {Page,SSTime = Request.QueryString["SSTime"],SEtime = Request.QueryString["SETime"],
                                                     Srisk = Request.QueryString["Srisk"], addrSearch = Request.QueryString["addrSearch"], type = "Risk"})">RiskLevel</a></li>
               
            </ul>
            <div id="smtitle"><h1><a href="@Url.Action("index","Result" )" style="margin: 60px">ReSet</a></h1></div>
            <ul class="normal">
                <div id="smbottom">&nbsp;</div>
            </ul>
        </div>
        <div id="sidemenu2">
            <div id="smtop">&nbsp;</div>
            <div id="smtitle"><h1>Chart</h1></div> <!-- side menu current page title -->
            <ul class="normal">
                <li>
                    <a href="@Url.Action("chart","Result")">goChart</a>
                </li>
            </ul>
            <ul class="normal">
                <div id="smbottom">&nbsp;</div>
            </ul>
        </div>

    </div> <!-- end wrapper -->

</body>





















<header>
    <script src="jQuery/jquery-1.4.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />


    <script>
    $(document).ready(function () {
        setInterval("startRequest()", 1000);
    });
    function startRequest() {
        $.ajax({
            type: 'GET',
            data: { page: @Model.PageNumber},
            url: '@Url.Action("RefreshData", "Result")',
            success: function (result) {
                $('#mainContent').html(result);
            }
        })
    }
    </script>
</header>



























<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 網路行為分析</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
    <link href="~/CSS/vendor/metisMenu/metisMenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/dist/css/sb-admin-2.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/vendor/morrisjs/morris.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="/"><font color="#000000"><b>網路行為分析</b></font></a>
            </div>
            <!-- /.navbar-header -->

            <div class="nav navbar-top-links navbar-right"; style="width:225px;margin-top:5px; ">
                <div id="Time"></div>
            </div>

                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                <a href="./Result/"><i class="fa fa-dashboard fa-fw"></i> 儀錶板</a>
                            </li>
                            <li>
                                <a href="./Result/HistoricalRecord"><i class="glyphicon glyphicon-time"></i> 歷史紀錄</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-table fa-fw"></i> 管制名單<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        @Html.ActionLink("封鎖名單", "Index", "LockTables")
                                    </li>
                                    <li>
                                        @Html.ActionLink("白名單", "Index", "WhiteLists")
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
</nav>

        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
    $(document).ready(function () {
        setInterval("TimeRequest()", 1000);
    });

    function TimeRequest() {
    $.ajax({
    type: 'GET',
    url: '@Url.Action("Time", "Result")',
    success: function (result) {
    $('#Time').html(result);
    }
    })
    }
    </script>
    <script src="~/CSS/vendor/metisMenu/metisMenu.min.js"></script>
    <script src="~/CSS/dist/js/sb-admin-2.js"></script>
</body>
</html>
